<div class="container mid">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 mid">

			<% if !params[:form_trigger] %>
				<%= form_tag new_form_path do%>
					<div class="form-group">
						<%= label_tag :numberOfQuestions, "Number of questions" %>

						<%= text_field_tag 'numberOfQuestions', nil, class: "form-control numeric", placeholder: "Number of questions", :maxlength => 2%>
						<%= hidden_field_tag 'form_trigger', '000' %>
					</div>
					<button class="btn btn-default mid">Add Questions</button>
				<% end %>
			<% end %>
			<br>

		<% if params[:form_trigger] %>
			<%= form_for @form do |f| %>
				<div class="form-group">
					<%= f.label :title, "Title" %>
					<%= f.text_field :title, class: "form-control", placeholder: "Insert a title" %>
				</div>


				<%= f.fields_for :questions do |builder| %>
					<div class="form-group">
						<%= builder.label :body, "Question" %>
						<%= builder.text_field :body, class: "form-control", placeholder: "Insert a question" %>
					</div>
				<% end %>

				<div class="form-group">
					<%= f.submit class: "btn btn-default" %>
				</div>
			<% end %>
		<% end %>
		</div>
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<%= render "ads" %>

</div>